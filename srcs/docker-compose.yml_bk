version: '3.8'
services:

  mariadb:
    environment:
      - MYSQL_DB=${DB_NAME}
      - MYSQL_USER=${DB_USER}
      - MYSQL_PASSWORD=${DB_PASSWORD}
      - MYSQL_ROOT_PASSWORD=${DB_ROOT_PASSWORD}
    container_name: mariadb
    build: req/mariadb
    image: mariadb:test
    volumes:
      - db_v:/var/lib/mysql
    ports:
      - "3306:3306"
    restart: always

  wordpress:
    environment:
      - MYSQL_DB=${DB_NAME}
      - MYSQL_USER=${DB_USER}
      - MYSQL_PASSWORD=${DB_PASSWORD}
      - MYSQL_HOSTNAME=${DB_HOSTNAME}
    container_name: wordpress
    build: req/wordpress
    image: wordpress:test
    depends_on:
      - mariadb
    ports:
      - "9000:9000"
    volumes:
      - v_wordpress://var/www/html/wordpress
    restart: always

  nginx:
    container_name: nginx
    build : req/nginx
    image: nginx:test
    depends_on:
      - wordpress
    ports:
      - "443:443"
    volumes:
      - v_wordpress:/var/ww/html/wordpress
    restart: always

  volumes:
    db_v:
      driver: local
      driver_opts:
        type: none
        device: /home/martin/data/mysql
        o: bind
    v_wordpress:
      driver: local
      driver_opts:
        type: none
        device: /home/martin/data/wordpress
        o: bind
